{
    "name": "VTasks",
    "description": "Simple Tasks Manager - No Login, No Spam",
    "version": "0.1",
    "manifest_version": 3,
    "icons": {
        "32": "icon32.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup.html",
        "default_title": "VTasks - Quick Task Manager"
    },
    "author": "VCF Devs",
    "homepage_url": "https://github.com/your-username/VTasks"
}